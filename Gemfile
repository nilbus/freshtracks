source 'http://rubygems.org'

# Framework
gem 'rails', '3.0.3'

group :development, :test do
  # Server
  gem 'mongrel', '~> 1.2.0.pre2'

  # Database
  gem 'sqlite3-ruby', :require => 'sqlite3'
  gem 'pg'

  # Unit testing
  gem 'rspec'
  gem 'rspec-rails'
  gem 'factory_girl'

  # Functional testing
  gem 'cucumber'
  gem 'cucumber-rails'
  gem 'capybara'
  gem 'culerity'
  gem 'celerity', :require => nil # JRuby only. Make it available but don't require it in any environment.
  gem 'launchy'
end
