<% 
if(params[:action] == "index")
  case params[:controller]
    when "courses"
      @selected_tab = 'tab1'
    when "degree_requirements"
      @selected_tab = 'tab2'
    when "wishlist_sections"
      @selected_tab = 'tab3'
  end
end
%>

<% if session[:semester] %>
<div class="right-align">
Semester: <%= Semester.find(session[:semester]).name %><br>
<%= link_to "Change semester", semesters_path%>
</div>

<ul class="tab-list">
  <li class="tab"<%= ( @selected_tab == 'tab1' ) ? ' id="selectedtab"' : '' %>>
  <%= link_to "Search", courses_path %>
  </li>
  <li class="tab"<%= ( @selected_tab == 'tab2' ) ? ' id="selectedtab"' : '' %>>
  <%= link_to degree_requirements_path do  %>
    <nobr>Degree Requirements</nobr>
  <% end %>
  </li>
  <li class="tab"<%= ( @selected_tab == 'tab3' ) ? ' id="selectedtab"' : '' %>>
  <%= link_to "Wishlist", wishlist_sections_path %>
  </li>
</ul>

<% end %>

<%= yield %>
</body>
</html>
