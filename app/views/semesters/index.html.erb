<div class="row">
  <div class="threecol last">
    <h1>Choose a semester</h1>
  </div>
</div>
<%
  current_semester = @semesters.select{|s| s.name == "Spring 2011"}.first
  next_semester = @semesters.select{|s| s.name == "Fall 2011" }.first
%>
<div class="row">
  <div class="threecol last">
    <%= link_to image_tag("next_semester.png", :border => 0), next_semester, :id => 'next_semester' %><br/>
    (<%= next_semester.name %>)<br/><br/>
  </div>
</div>
<div class="row">
  <div class="threecol last">
    <%= link_to image_tag("this_semester.png", :border => 0), current_semester, :id => 'this_semester' %><br/>
    (<%= current_semester.name %>)<br/>
  </div>
</div>
