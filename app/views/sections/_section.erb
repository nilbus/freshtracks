<tr>
  <td><%=section.professor%></td>    
  <td><%=section.room%></td>
  <td>
    <%=section.days%> 
    <%=section.begin_time.strftime(time_format)%>-<%=section.end_time.strftime(time_format)%>
  </td>
  <% if options["show_wishlist_button"] %>

  <td class="button">
    <input  type="button" 
            onclick="$.post('<%= url_for :controller => 'wishlist_sections', :action => 'create', :id => section.id %>')"
            value="Add to Wishlist">
  </td>
  <% end %>
  <% if options["show_schedule_button"] %>
  <td class="button">
    <input  type="button" 
            onclick="$.post('<%= url_for(:controller => 'registered_sections', :action => 'create', :id => section.id) %>')"
            value="Add to Schedule">
  </td>
  <% end %>
  <% if options["show_remove_button"] %>
  <td class="button">
    <input  type="button" 
            onclick="$.post('<%= url_for(:controller => 'wishlist_sections', :action => 'destroy', :id => section.id) %>')"
            value="Remove from wishlist">
  </td>
  <% end %>
    <% if options["show_drop_button"] %>
  <td class="button">
    <input  type="button" 
            onclick="$.post('<%= url_for(:controller => 'registered_sections', :action => 'destroy', :id => section.id) %>')"
            value="Remove from wishlist">
  </td>
  <% end %>
</tr>
