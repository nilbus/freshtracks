<div class="spacer"></div>
<h1 class="inline">Your Current Schedule</h1>
<div class="rightAlign scheduleLink"><%= link_to "View Graphical Schedule", registered_sections_path, :target => '_blank' unless @registered_sections.empty? %></div>

<%- if @registered_sections.empty? -%>
<h4>You haven't registered for any classes this semester.</h4>
<%- else -%>


<table class="courseList">
  <% for reg_section in @registered_sections %>
  <%= render  :partial => 'courses/course', 
              :object => reg_section.section,
              :locals => { :options => { :show_drop_button => true,
                                         :added => true,
                                         :added_object => reg_section } } %>
  <% end %>
</table>

<%- end -%>
